# Use a base image
FROM ersiliaos/base:latest


model_id = sys.argv[1]
repo_url = sys.argv[2]

ARG MODEL=model_id
ENV MODEL=model_id

# Set the working directory in the container
WORKDIR /repo

# Install Git
RUN apt-get update && apt-get install -y git

# Create the 'eos9ei3' folder
RUN mkdir model_id

# Change directory to 'eos9ei3'
WORKDIR /repo/model_id

# Clone the GitHub repository into the 'eos9ei3' folder
RUN git clone repo_url .

RUN ls -a

# Move back to the 'repo' directory
WORKDIR /repo

RUN ls -a

# Other instructions...
RUN ersilia -v fetch model_id --repo_path model_id

# List files and folders in the current directory
